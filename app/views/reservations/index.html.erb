<p style="color: green"><%= notice %></p>

<h1>Reservations</h1>

<div id="reservations">
  <% @reservations.each do |reservation| %>
    <%= render reservation %>
    <p>
    </p>
  <% end %>
</div>

<%= form_tag search_path, method: :get do %>
  <div>
  <%=label_tag :source, "Source:"%><br>
  <%=text_field_tag :source, params[:source]%>
  </div>
  
  <div>
  <%=label_tag :destination, "Destination:"%><br>
  <%=text_field_tag :destination, params[:destination]%>
  </div>

  <div>
  <%=label_tag :departure_time, "Date:"%><br>
  <%=date_field_tag :departure_time, params[:departure_time]%>
  </div>
  <br>
  <div>
  <%= submit_tag "Search" %>
  </div>
  <%end%>
  <br>

<%= link_to "Logout",destroy_user_session_path, data: {
  turbo_method: :delete,
  turbo_confirm: "Are you sure?"
} %>
